<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Текстовая информация" styleClass="title-label"/>

    <Button text="Вернуться к погоде" onAction="#goToWeatherScene"/>

    <TextField fx:id="usernameField" promptText="Имя пользователя"/>
    <PasswordField fx:id="passwordField" promptText="Пароль"/>

    <TextArea fx:id="textArea" promptText="Введите текстовую информацию здесь..." prefRowCount="10" prefColumnCount="40"/>

    <Button text="Зарегистрироваться" onAction="#register"/>
</VBox>